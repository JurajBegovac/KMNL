<?xml version="1.0" encoding="UTF-8"?>
<lint>

    <issue id="all">
        <ignore path="build" />
    </issue>

    <!-- Remove this 'UnusedResources' when Lint for Kotlin is updated
    Android Lint: False-positive Lint warning "unused resources" for resources in Kotlin code
    https://youtrack.jetbrains.com/issue/KT-12499 -->
    <issue id="UnusedResources" severity="ignore" />

    <!--Add support for Firebase App Indexing, then remove 'GoogleAppIndexingWarning'-->
    <issue id="GoogleAppIndexingWarning" severity="ignore" />

    <issue id="ContentDescription" severity="ignore" />

    <issue id="MergeRootFrame" severity="ignore" />

    <issue id="TrustAllX509TrustManager">
        <ignore path="*/jsoup/*" />
    </issue>

    <issue id="Overdraw">
        <ignore path="res/layout/view_table.xml" />
    </issue>

    <issue id="AllowBackup" severity="ignore" />

    <issue id="InvalidPackage">
        <ignore regexp="okio-1.12.0.jar" />
        <ignore regexp="retrofit-2.2.0.jar" />
    </issue>

</lint>
